@model Cinema

<div class="card" style="width:20rem;margin:20px 550px 24px 550px">
	<img class="card-img-top" src="@Model.Logo" alt="image" style="width:100%">
	<div class="card-body">
		<h3 class="card-title">@Model.Name</h3>
		<p class="card-text">@Model.Description</p>
		<a class="btn btn-danger"
		   asp-action="Delete"
		   asp-controller="Cinema"
		   asp-route-id="@Model.Id"
	 onclick="ConfirmDelete()">Delete</a>
	</div>
</div>

<script>
	function ConfirmDelete() {
		document.getElementById("");
		var accept = confirm("Are You Sure?");
		if (accept == false) {
			event.preventDefault();
		}
	}
</script>