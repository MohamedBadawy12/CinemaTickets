@using CinemaTickets.Data.ViewModelData;
@model RoleViewModel

@{
	ViewData["Title"] = "Add New Role";
}
<div class="row">
	<div class="col-md-6 offset-3">
		<p>
			<h4>
				Add New Role
			</h4>
		</p>

		@if (TempData["Error"] != null)
		{
			<div class="col-md-12 alert alert-danger">
				<span><b>Sorry!</b> - @TempData["Error"]</span>
			</div>
		}
		<div class="row">
			<div class="col-md-8 offset-2">
				<form asp-action="CreateRoles">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group mb-3">
						<label asp-for="RoleName" class="control-label"><i class="fas fa-lock"></i></label>
						<input asp-for="RoleName" class="form-control" />
						<span asp-validation-for="RoleName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<input class="btn btn-outline-success float-right" type="submit" value="Save" />
						<a class="btn btn-outline-secondary" asp-controller="Movie" asp-action="Index">Cancel</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>