
@if(!User.Identity.IsAuthenticated){
	<a class="btn btn-outline-success my-2 my-sm-0" style="padding-right:15px" asp-controller="Account" asp-action="Login">
		<i class="bi bi-box-arrow-in-right"></i> Log in
	</a>
	<span style="padding:5px;"></span>
	<div class="dropdown" style="padding-right:35px">
		<button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" aria-expanded="false">
			<i class="bi bi-person-badge"></i> Register
		</button>
		@*<a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Register" data-toggle="dropdown" aria-expanded="false">
			<i class="bi bi-person-plus"></i> Register
		</a>*@
		<ul class="dropdown-menu" aria-labelledby="profile-btn">
			<li>
				<a class="dropdown-item" asp-controller="Account" asp-action="Register">
					<i class="bi bi-list"></i> Register User
				</a>
			</li>
			<li>
				<a class="dropdown-item" asp-controller="Account" asp-action="AddAdmin">Register Admin</a>
			</li>
			
		</ul>
	</div>
	
}
else{
	<div class="dropdown">
		<button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" aria-expanded="false">
			<i class="bi bi-person-badge"></i> Hello @User.Identity.Name
		</button>
		<ul class="dropdown-menu" aria-labelledby="profile-btn">
			<li>
				<a class="dropdown-item" asp-controller="Order" asp-action="Index">
					<i class="bi bi-list"></i> Orders
				</a>
			</li>
			@if (User.IsInRole("Admin"))
			{
				<li>
					<a class="dropdown-item" asp-controller="Account" asp-action="Users">Users</a>
				</li>
			}
		</ul>
	</div>
	<span style="padding:5px;"></span>
	<form asp-controller="Account" asp-action="Logout" onclick="ConfirmLogout()">
		<button class="btn btn-outline-danger my-2 my-sm-0">
			<i class="bi bi-box-arrow-in-right"></i> Log out
		</button>
	</form>
}

<script>
	function ConfirmLogout() {
		document.getElementById("");
		var accept = confirm("Are You Sure to Log Out?");
		if (accept == false) {
			event.preventDefault();
		}
	}
</script>