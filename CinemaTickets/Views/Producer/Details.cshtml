@model Producer

<div class="row text">
	<div class="col-md-5 offset-4">
		<img class="rounded-circle" src="@Model.ProfilePictureUrl" alt="image" style="max-width:250px">
		<br />
		<div class="row">
			<div class="col-md-8 offset-1">
				<h5>@Model.FullName</h5>
				<p>@Model.Bio</p>
				@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
				{
					<a class="btn btn-danger"
				   asp-action="Delete"
				   asp-controller="Producer"
				   asp-route-id="@Model.Id"
					onclick="ConfirmDelete()">Delete</a>
				}
			</div>
		</div>
	</div>
</div>

<script>
	function ConfirmDelete() {
		document.getElementById("");
		var accept = confirm("Are You Sure?");
		if (accept == false) {
			event.preventDefault();
		}
	}
</script>