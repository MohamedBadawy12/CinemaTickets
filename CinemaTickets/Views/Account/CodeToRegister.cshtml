@using CinemaTickets.Data.CodeOfRegister;
@model CodeRegister
@{
	ViewData["Title"] = "Enter Code To Register";
}
<div class="row">
	<div class="col-md-6 offset-3">
		<p>
			<h4>
				Enter Code To Register
			</h4>
		</p>

		
		<div class="row">
			<div class="col-md-8 offset-2">
				<form asp-action="CodeToRegister">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group mb-3">
						<label asp-for="CodeNumber" class="control-label"></label>
						<input type="password" asp-for="CodeNumber" class="form-control" placeholder="Enter Code"/>
						<span asp-validation-for="CodeNumber" class="text-danger"></span>
						@*@if (TempData["Error"] != null)
						{
							<span class="text-danger"><b>Sorry!</b> - @TempData["Error"]</span>
						}*@
					</div>
					<div class="form-group">
						<input class="btn btn-outline-success float-right" type="submit" value="Submit" />
					</div>
				</form>
			</div>
		</div>
	</div>
</div>